{
  "cli": {
    "version": ">= 16.24.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:assembleRelease",
        "image": "latest"
      },
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "GRADLE_OPTS": "-Dorg.gradle.jvmargs=-Xmx4096m"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
