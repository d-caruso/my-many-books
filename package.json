{
  "name": "my-many-books",
  "version": "1.0.0",
  "private": true,
  "description": "My Many Books - Monorepo for managing personal book collections",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "test": "nx run-many --target=test --projects=api,web-app",
    "test:affected": "nx affected --target=test",
    "lint": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "start": "nx run-many --target=serve --all --parallel",
    "dev": "nx run-many --target=serve --all --parallel",
    "serve:api": "nx serve api",
    "serve:web-app": "nx serve web-app",
    "build:api": "nx build api",
    "build:web-app": "nx build web-app",
    "test:api": "nx test api",
    "test:web-app": "nx test web-app",
    "lint:api": "nx lint api",
    "lint:web-app": "nx lint web-app",
    "deploy:api": "nx run api:deploy",
    "deploy:api:dev": "nx run api:deploy --stage=dev",
    "deploy:api:prod": "nx run api:deploy --stage=prod",
    "graph": "nx graph",
    "affected:graph": "nx affected:graph",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "postinstall": "nx postinstall || exit 0",
    "cypress:open": "cd apps/web-app && npm run cypress:open",
    "cypress:run": "cd apps/web-app && npm run cypress:run",
    "cypress:component": "cd apps/web-app && npm run cypress:component",
    "cypress:component:open": "cd apps/web-app && npm run cypress:component:open",
    "e2e": "cd apps/web-app && npm run e2e",
    "e2e:open": "cd apps/web-app && npm run e2e:open",
    "test:web-app:all": "cd apps/web-app && npm run test:all"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@nx/eslint": "^21.6.3",
    "@nx/jest": "^21.6.3",
    "@nx/js": "^21.6.3",
    "@nx/react": "^21.6.3",
    "@nx/webpack": "^21.6.3",
    "@nx/workspace": "^21.6.3",
    "babel-jest": "^29.7.0",
    "cypress": "^14.5.4",
    "mysql2": "^3.6.5",
    "nx": "^21.6.3",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "nx": {
    "includedScripts": []
  }
}
