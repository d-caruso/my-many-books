{
  "name": "my-many-books",
  "version": "1.0.0",
  "private": true,
  "description": "My Many Books - Monorepo for managing personal book collections",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "start": "nx run-many --target=start --all --parallel",
    "dev": "nx run-many --target=dev --all --parallel",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint"
  },
  "devDependencies": {
    "@nx/workspace": "^17.0.0",
    "nx": "^17.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "nx": {
    "includedScripts": []
  }
}