{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-many-books/shared-types": ["libs/shared-types/src/index.ts"],
      "@my-many-books/shared-api": ["libs/shared-api/src/index.ts"],
      "@my-many-books/ui-components": ["libs/ui-components/src/index.ts"],
      "@my-many-books/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@my-many-books/shared-hooks": ["libs/shared-hooks/src/index.ts"],
      "@my-many-books/shared-business": ["libs/shared-business/src/index.ts"],
      "@my-many-books/shared-design": ["libs/shared-design/src/index.ts"],
      "@my-many-books/shared-navigation": ["libs/shared-navigation/src/index.ts"],
      "@my-many-books/shared-forms": ["libs/shared-forms/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}