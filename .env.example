# ================================================================
# Environment Variables Example
# ================================================================
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_many_books
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# API Configuration
API_VERSION=1.0.0
NODE_ENV=development
LOG_LEVEL=debug

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_STAGE=dev

# External Services
OPEN_LIBRARY_BASE_URL=https://openlibrary.org
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
GOOGLE_BOOKS_BASE_URL=https://www.googleapis.com/books/v1

# Performance & Caching
CACHE_TTL=3600
REQUEST_TIMEOUT=10000
MAX_RETRIES=3

# Security & Authentication
API_KEYS_ENABLED=false
COGNITO_ENABLED=false
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_CLIENT_ID=your_cognito_client_id

# API Gateway & Domain
DOMAIN_NAME=api.mymanybooks.com
SSL_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/your-cert-id
HOSTED_ZONE_ID=your_hosted_zone_id

# Rate Limiting & Security
IP_FILTERING_ENABLED=false
ADMIN_IP_1=192.168.1.100
ADMIN_IP_2=10.0.0.50

# API Keys (generated via scripts/generate-api-keys.ts)
# API_KEY_1=mmb_your_api_key_here
# API_KEY_1_TIER=basic
# API_KEY_2=mmb_premium_api_key_here  
# API_KEY_2_TIER=premium